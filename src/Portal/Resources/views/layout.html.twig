    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.4/flatly/bootstrap.min.css">
    <style>
    body {
        padding-top: 70px;
    }
    
    .jumbotron {
        margin-bottom: 0px;
        background-position: fixed;
        background-size: cover;
        background-repeat: no-repeat;
        color: black;
        text-shadow: rgba(0,0,0,0.2) 0.3em 0.3em 0.3em;
    }
    
    .accent, a {
        color: #0179ab;
    }
    a:hover {
        color: #80c0e0;
    }
    .navbar-default .accent {
        color: #80c0e0;
    }
    .navbar-default .navbar-nav li a:hover, .navbar-default  a.navbar-brand:hover {
        color: #80c0e0;
    }
    .navbar-default {
        xbackground-color: #e6f2f6;
        xborder: #404040;
        xcolor: #202020;
    }
    
    a {
        text-decoration: none !important;
    }
    
    .buttonbox {
        text-align: right;
    }
    
    td, th {
      border-right: 1px solid #f0f0f0 !important;
      border-left: 1px solid #e0e0e0 !important;

    }

    </style>
</head>

<body class="header-fixed">


<!-- Fixed navbar -->
    {% if datawarehouse is defined %}
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="{{ path("index") }}"><i class="fa fa-bar-chart"></i> <span class="accent">BI</span>Sight <small class="accent">Portal</small></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a href="{{ path("datawarehouse", { dwcode: datawarehouse.getCode() })}}"><i class="fa fa-database"></i> {{ datawarehouse.getName() }}</a></li>
            <li><a href="{{ path("table_index", { dwcode: datawarehouse.getCode() })}}"><i class="fa fa-table"></i> Tables</a></li>
            <li><a href="{{ path("lattice_index", { dwcode: datawarehouse.getCode() })}}"><i class="fa fa-sitemap"></i> Lattices</a></li>
            <li><a href="{{ path("lattice_report_index", { dwcode: datawarehouse.getCode() })}}"><i class="fa fa-bar-chart"></i> Lattice Reports</a></li>
            <li><a href="{{ path("olapschema_view", { dwcode: datawarehouse.getCode() })}}"><i class="fa fa-cube"></i> OLAP Cubes</a></li>
          </ul>
          <!--
          <ul class="nav navbar-nav navbar-right">
            <li><a href="../navbar/">Default</a></li>
            <li><a href="../navbar-static-top/">Static top</a></li>
          </ul>
          -->
        </div>
      </div>
    </nav>
    {% endif %}

    <div class="container">
        {% block content %}{% endblock %}
    </div>

    <!-- JS Global Compulsory -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

</body>
